<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}MoWlkky !{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/compiled/css/main.css') }}">
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top collapse navbar-collapse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">{{ 'common.base.header.site_name'|trans()|raw }}</a>
            </div>
            <form class="navbar-form navbar-right">
                <div class="label">
                    {{ 'common.base.header.admin_access'|trans() }}
                </div>
                <div class="form-group form-group-sm">
                    <input type="text" placeholder="{{ 'common.base.header.login'|trans() }}" class="form-control">
                </div>
                <div class="form-group form-group-sm">
                    <input type="password" placeholder="{{ 'common.base.header.password'|trans() }}" class="form-control">
                </div>
                <button type="submit" class="btn btn-success">{{ 'common.base.header.signin'|trans() }}</button>
            </form>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/compiled/javascript/main.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
